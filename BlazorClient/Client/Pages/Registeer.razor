<body>
<form>
  <div class="container-fluid overflow-">
    <div class="col-12 Section_Logo">
        <img  src="https://i.ibb.co/yNsxTwX/image-1.png" alt="logo">
    </div>
    <div class="container ">
      <div class="col-12">
          <div class="Login">

            <!-- Login header  -->
            <div class="Login_Header">
              <div onclick="RegisterBtn()" class="Login-Btn register_btn  ">
                <p >Зарегистрироваться</p>
              </div>
              <div onclick="@LoginPage" class="Login-Btn login_btn active">
                <p>Войти</p>
              </div>
            </div>
            <!-- Login Body  -->
            <div class="Login_Body">
                <div><h1>Создайте свой аккаунт</h1></div>
                <div>
                            <input required="Вы пропустили это поле" @bind="userDto.FullName" type="text" name="" id="inputValue" placeholder="Имя и Фамилия">
                            <input required="Вы пропустили это поле" @bind="userDto.Email" type="email" name="" id="inputValue" placeholder="Email">
                            <input required="Вы пропустили это поле" @bind="userDto.Password" type="password" name="" id="inputValue" placeholder="Пароль">
                </div>
                <div class="Login_Body_Text_Page">
                  <p>By clicking Sign In, you agree to our Terms of Use and our Privacy Policy.</p>
                </div>
                            <div>
                                <button @onclick="()=> OnValidSubmit()" class="btn btn-primary">Зарегистрироваться</button>
                </div>
            </div>
          </div>
      </div>
    </div>
  </div>


</form>
</body>
<script src="https://kit.fontawesome.com/4a51ac7252.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<script>
    var btnprimary = document.getElementsByClassName(" btn-primary")[0]
    btnprimary.addEventListener("click", function (evt) {
        evt.preventDefault();
    })
    var Register = document.getElementsByClassName("register_btn")[0]
    var Login = document.getElementsByClassName("login_btn")[0]
  function RegisterBtn(){
    if(Register.classList.contains("active")){
      Login.classList.add("active")
      Register.classList.remove("active")

       Register.classList.add("fw_bold_p")
       Login.classList.remove("fw_bold_p")
    }
  }
  function LoginBtn(){
    if(Login.classList.contains("active")){
      Register.classList.add("active")
      Login.classList.remove("active")


       Register.classList.remove("fw_bold_p")
      Login.classList.add("fw_bold_p")
    }
  }
</script>
@code {


    private UserDto userDto = new UserDto();
     private EditContext editContext;
    void LoginPage()
    {
        NavigationManager.NavigateTo(NavigateUrl.ToLogin);
    }


    async System.Threading.Tasks.Task OnValidSubmit()
    {

        var response = await ApiServices.Register(userDto);
        if (response.IsSuccessStatusCode)
        {
            var json = await response.Content.ReadAsStringAsync();

            using (JsonDocument doc = JsonDocument.Parse(json))
            {
                JsonElement root = doc.RootElement;

                if (root.TryGetProperty("email", out JsonElement emailElement))
                {
                    string email = emailElement.GetString()!;

                    await SaveToLocalStorage("email", email);
                }
            }

            NavigationManager.NavigateTo("/");
        }
    }

    private async Task SaveToLocalStorage(string key, string value)
    {
        await JsRuntime.InvokeVoidAsync("localStorage.setItem", key, value);

    }

}
